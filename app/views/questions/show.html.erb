<%= flash[:notice] %>

<h2><%= @question.title %></h2>

<p><%= @question.description %></p>
<p><%= link_to 'Edit Question', edit_question_path %>

<h3>Answers</h3>
<%= link_to "Answer this Question", new_question_answer_path(@question, @answer) %>

<ul>
  <% @question.answers.each do |answer| %>
    <li><%= answer.description %></li>
  <% end %>
</ul>

<p><%= link_to 'Delete Question', @question, method: :delete, data: { confirm: 'Are you sure?' } %>
<p><%= link_to "Go back", questions_path %>
